<h1><%= @pet.name %></h1><br>
<% if @pet.adopted == true %>
  <h2>Adopted by: <%= link_to @pet.user.to_s, @pet.user %></h2>
<% else %>
  <h2>Ready to be adopted!<h2>
<% end %>
<br>

<% if @pet.adopted == false %>
  <%= form_for @pet do |f| %>
    <%= f.hidden_field :user_id, value: @user.id %>
    <%= f.submit 'Adopt '%>
  <% end %>>
<% end %>

<%= image_tag @pet.image_url %>
