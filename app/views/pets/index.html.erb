<div class="pets-cover">
  <div class="hero-text">
    <h1 class="title"> My Pets </h1>
  </div>
</div>

<div class="arrivals">
  <h2 class="title"> Adopted Pets </h2>
  <% if @pets.empty? %>
  <p><em>Currently no adopted pets.<em></p>
    <% end %>
</div>

<% @pets.each do |pet| %>
<div class="flip flip-vertical">
    <div class="front" style="background-image: url(<%= pet.image_url %>)">
       <h1 class="text-shadow"><%= pet.name %></h1>
    </div>
    <div class="back">
       <h2><%= pet.name %></h2>
       <p><%= pet.gender %> </p>
        <a href="/pets/<%= pet.id %>"><button type="button">Check it out!</button></a>
    </div>
</div>
<% end %>
