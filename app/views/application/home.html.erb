<% @latest.each do |pet| %>
<div class="flip flip-vertical">
    <div class="front" style="background-image: url(<%= pet.image_url %>)">
       <h1 class="text-shadow"><%= pet.name %></h1>
    </div>
    <div class="back">
       <h2><%= pet.name %></h2>
       <p><%= pet.gender %> </p>
        <a href="/pets/<%= pet.id %>"><button type="button">adopt now</button></a>
    </div>
</div>
<% end %>
